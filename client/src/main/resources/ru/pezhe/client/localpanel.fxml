<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
      fx:controller="ru.pezhe.client.LocalPanelController">

    <HBox>
        <ComboBox fx:id="disksBox" onAction="#selectDiskAction"/>
        <Button text="\\" onAction="#btnRootAction"/>
        <Button text=".." onAction="#btnPathUpAction"/>
        <TextField fx:id="pathField" editable="false" HBox.hgrow="ALWAYS" disable="true" opacity="Infinity"/>

    </HBox>

    <TableView fx:id="filesTable" VBox.vgrow="ALWAYS"/>

    <properties>
        <ctrl><fx:reference source="controller"/></ctrl>
    </properties>
</VBox>
